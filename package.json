{
  "name": "easypub",
  "version": "1.0.0",
  "repository": "https://github.com/vinicius-batista/easypub_app.git",
  "author": "Vinicius Batista <viniciusbfs2012@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "serve": "concurrently \"yarn serve:app\"",
    "serve:app": "yarn workspace @easypub/app run serve",
    "lint": "concurrently \"yarn lint:app\"",
    "lint:app": "yarn workspace @easypub/app run lint",
    "build": "concurrently \"yarn build:app\"",
    "build:app": "yarn workspace @easypub/app run build"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "concurrently": "^4.1.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.2.3",
    "eslint-plugin-vuetify": "^1.0.0-beta.3",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "prettier --write",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "prettier --write",
      "git add"
    ]
  },
  "postcss": {}
}
